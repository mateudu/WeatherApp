@model List<WeatherApp.Core.Models.WeatherForecast>

@{
    ViewBag.Title = "Index";
}

<h2>Weather Forecasts</h2>

<p>
    @if (User != null && User.IsInRole(Config.AdminRole))
    {
        @Html.ActionLink("Create New", "Create");
    }
    else
    {
        <p>@Html.ActionLink("Log in", "Login", "Account") as administrator do add/update forecast.</p>
        
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().TemperatureCelsius)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TemperatureCelsius)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @if (User != null && User.IsInRole(Config.AdminRole))
            {
                <span>
                    @Html.ActionLink("Update", "Update", new { id = item.Id })
                    | @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                </span>
            }
        </td>
    </tr>
}

</table>
